{
    "doctype": "DocType",
    "name": "Logistics Task",
    "module": "TEMS Supply Chain",
    "engine": "InnoDB",
    "field_order": [
        "task_type",
        "origin",
        "destination",
        "related_asset",
        "scheduled_time",
        "completion_time",
        "status",
        "notes"
    ],
    "fields": [
        {
            "fieldname": "task_type",
            "label": "Task Type",
            "fieldtype": "Data",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "origin",
            "label": "Origin",
            "fieldtype": "Data"
        },
        {
            "fieldname": "destination",
            "label": "Destination",
            "fieldtype": "Data"
        },
        {
            "fieldname": "related_asset",
            "label": "Related Asset",
            "fieldtype": "Link",
            "options": "Asset"
        },
        {
            "fieldname": "scheduled_time",
            "label": "Scheduled Time",
            "fieldtype": "Datetime"
        },
        {
            "fieldname": "completion_time",
            "label": "Completion Time",
            "fieldtype": "Datetime"
        },
        {
            "fieldname": "status",
            "label": "Status",
            "fieldtype": "Select",
            "options": "Planned\nIn Progress\nCompleted\nCancelled",
            "default": "Planned",
            "in_list_view": 1
        },
        {
            "fieldname": "notes",
            "label": "Notes",
            "fieldtype": "Small Text"
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        },
        {
            "role": "Procurement Officer",
            "read": 1,
            "create": 1
        },
        {
            "role": "Fleet Manager",
            "read": 1
        }
    ]
}