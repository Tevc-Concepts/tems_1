{
    "doctype": "DocType",
    "name": "Climate Risk Event",
    "module": "TEMS Climate",
    "engine": "InnoDB",
    "field_order": [
        "date",
        "risk_type",
        "severity",
        "location",
        "impact",
        "related_journeys"
    ],
    "fields": [
        {
            "fieldname": "date",
            "label": "Date",
            "fieldtype": "Date",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "risk_type",
            "label": "Type",
            "fieldtype": "Select",
            "options": "Flood\nHeat\nStorm\nOther",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "severity",
            "label": "Severity",
            "fieldtype": "Select",
            "options": "Low\nMedium\nHigh\nCritical"
        },
        {
            "fieldname": "location",
            "label": "Location (geohash)",
            "fieldtype": "Data"
        },
        {
            "fieldname": "impact",
            "label": "Impact",
            "fieldtype": "Small Text"
        },
        {
            "fieldname": "related_journeys",
            "label": "Related Journeys",
            "fieldtype": "Table",
            "options": "Climate Risk Journey"
        }
    ]
}